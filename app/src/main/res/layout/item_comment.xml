<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="roll"
            type="Boolean" />

        <variable
            name="comment"
            type="com.example.codeview.model.comment.Datum" />

        <variable
            name="clickCollape"
            type="com.example.codeview.util.CustomClickListener" />

        <variable
            name="view"
            type="Boolean" />

        <variable
            name="numberOfComment"
            type="String" />

        <variable
            name="adapter"
            type="com.example.codeview.adapter.CommentResponseAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="17dp"
            app:cardCornerRadius="300dp">

            <ImageView
                android:id="@+id/commentimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/group_16"
                app:loadImage="@{comment.userResponseDto.photo}" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/commentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{comment.userResponseDto.nickName}"
                android:textColor="#667b90"
                android:textSize="11sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/commentContent"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5sp"
                    android:text="@{comment.content}"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/shape" />

                    <TextView
                        android:id="@+id/commentLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{comment.convertLike()}" />
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/commentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21dp"
                    android:lineSpacingExtra="7sp"
                    android:text="@{comment.TextTime()}"
                    android:textColor="#667b90"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/commentResponse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="7sp"
                    android:text="Responder"
                    android:textColor="#667b90"

                    android:textSize="11sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:lineSpacingExtra="7sp"
                    android:text="Denunciar"
                    android:textColor="#667b90"

                    android:textSize="11sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="7sp"
                        android:onClick="@{()->clickCollape.setClickCollapse()}"
                        android:text="@{numberOfComment}"
                        android:textColor="#667b90"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        android:visibility="@{view ? View.VISIBLE : View.GONE}" />

                    <ImageView
                        android:id="@+id/iconCollapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dow"
                        android:visibility="@{view ? View.VISIBLE : View.GONE}" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adapter="@{adapter}"
                    android:nestedScrollingEnabled="false"
                    android:visibility="@{roll ? View.GONE:View.VISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_response_comment" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>
